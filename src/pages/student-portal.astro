---
import Layout from '../layouts/Layout.astro';
import Navigation from '../components/kokonutui/block-01-nav';
import Footer from '../components/Footer.astro';
---

<Layout title="Student Portal - Coming Soon - DCCP">
    <Navigation client:load />
    <div class="relative min-h-screen bg-gradient-to-b from-white via-blue-100 to-blue-700">
        <!-- Decorative background elements -->
        <div class="absolute inset-0 overflow-hidden pointer-events-none">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[1000px] h-[1000px] bg-gradient-to-b from-yellow-100/20 to-transparent rounded-full blur-3xl"></div>
        </div>

        <div class="relative">
            <!-- Main Content -->
            <div class="container mx-auto px-4 min-h-screen flex items-center justify-center">
                <div class="text-center max-w-4xl mx-auto">
                    <!-- Coming Soon Badge -->
                    <div class="inline-block mb-8 animate-bounce">
                        <span class="bg-yellow-100 text-yellow-800 text-sm font-medium px-4 py-1.5 rounded-full border border-yellow-200">
                            Coming Soon
                        </span>
                    </div>

                    <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold tracking-tight text-blue-900 mb-8">
                        DCCP Student<br/>
                        <span class="bg-gradient-to-r from-yellow-600 to-yellow-500 text-transparent bg-clip-text">Portal</span>
                    </h1>

                    <p class="text-xl text-blue-800 mb-12 max-w-2xl mx-auto">
                        We're building something amazing! A new way to access your academic information, grades, and resources - all in one place.
                    </p>

                    <!-- Device Mockups -->
                    <div class="relative max-w-2xl mx-auto">
                        <div class="relative z-10">
                            <!-- Laptop Mockup -->
                            <div class="relative">
                                <!-- Laptop Body -->
                                <div class="bg-gray-800 rounded-2xl shadow-2xl p-3 pb-6">
                                    <!-- Screen Frame -->
                                    <div class="bg-gray-800 rounded-xl p-2">
                                        <!-- Camera -->
                                        <div class="absolute top-1.5 left-1/2 transform -translate-x-1/2 w-2 h-2 rounded-full bg-black ring-1 ring-gray-600"></div>
                                        <!-- Screen -->
                                        <div class="bg-white rounded-lg aspect-video overflow-hidden">
                                            <!-- Loading Animation -->
                                            <div class="h-full bg-gradient-to-br from-blue-50 to-blue-100/50 p-4 flex flex-col items-center justify-center">
                                                <div class="w-24 h-24 rounded-full border-4 border-yellow-200 border-t-yellow-500 animate-spin mb-4"></div>
                                                <div class="w-32 h-2 bg-yellow-200 rounded-full"></div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Base -->
                                    <div class="relative">
                                        <div class="absolute left-1/2 bottom-0 transform -translate-x-1/2 w-24 h-1 bg-gray-700 rounded"></div>
                                    </div>
                                </div>
                            </div>

                            <!-- Phone Mockup -->
                            <div class="absolute -right-6 -bottom-12 w-1/3">
                                <div class="relative bg-gray-900 rounded-[3rem] p-3 aspect-[9/19] shadow-xl">
                                    <!-- Notch -->
                                    <div class="absolute top-3 left-1/2 transform -translate-x-1/2 w-16 h-4 bg-black rounded-full"></div>
                                    <!-- Side Button -->
                                    <div class="absolute -right-2 top-20 w-1 h-6 bg-gray-800 rounded-r"></div>
                                    <!-- Screen -->
                                    <div class="bg-white h-full rounded-[2.25rem] overflow-hidden">
                                        <!-- Loading Animation -->
                                        <div class="h-full bg-gradient-to-br from-blue-50 to-blue-100/50 pt-8 px-3 pb-3 flex flex-col items-center justify-center">
                                            <div class="w-12 h-12 rounded-full border-2 border-yellow-200 border-t-yellow-500 animate-spin [animation-delay:-0.2s]"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Decorative Elements -->
                        <div class="absolute -inset-4 bg-gradient-to-r from-blue-100/50 to-blue-50/50 opacity-50 blur-2xl rounded-full -z-10"></div>
                    </div>

                    <!-- Features Preview -->
                    <div class="mt-16 grid sm:grid-cols-3 gap-8 text-center">
                        <div>
                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-yellow-100 to-yellow-200 flex items-center justify-center mx-auto mb-4">
                                <svg class="w-6 h-6 text-yellow-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <h3 class="text-blue-900 font-semibold mb-1">Cross-Platform</h3>
                            <p class="text-blue-700 text-sm">Access from any device</p>
                        </div>
                        <div>
                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-yellow-100 to-yellow-200 flex items-center justify-center mx-auto mb-4">
                                <svg class="w-6 h-6 text-yellow-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                                </svg>
                            </div>
                            <h3 class="text-blue-900 font-semibold mb-1">Real-Time</h3>
                            <p class="text-blue-700 text-sm">Instant updates</p>
                        </div>
                        <div>
                            <div class="w-12 h-12 rounded-full bg-gradient-to-br from-yellow-100 to-yellow-200 flex items-center justify-center mx-auto mb-4">
                                <svg class="w-6 h-6 text-yellow-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                                </svg>
                            </div>
                            <h3 class="text-blue-900 font-semibold mb-1">All-in-One</h3>
                            <p class="text-blue-700 text-sm">Everything you need</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <Footer />
</Layout>
