---
import Layout from "../layouts/Layout.astro";
import Menu from "../components/Menu.astro";
import Footer from "../components/Footer.astro";
import Block01Navigation from "../components/kokonutui/block-01-nav";

const facilities = [
    {
        title: "Computer Laboratories",
        description: "Modern computer labs equipped with the latest hardware and software for hands-on learning experiences.",
        image: "/images/IMG_0024.jpg",
        color: "blue"
    },
    {
        title: "Library",
        description: "A comprehensive collection of academic resources, digital materials, and quiet study spaces.",
        image: "/images/library.jpg",
        color: "purple"
    },
    {
        title: "Student Lounge",
        description: "Comfortable spaces for relaxation, group study, and student collaboration.",
        image: "/images/student-lounge.jpg",
        color: "green"
    },
    {
        title: "Lecture Halls",
        description: "Spacious, well-equipped classrooms with modern presentation technology.",
        image: "/images/lecture-hall.jpg",
        color: "amber"
    },
    {
        title: "Innovation Lab",
        description: "A dedicated space for creative projects, prototyping, and technological innovation.",
        image: "/images/innovation-lab.jpg",
        color: "indigo"
    },
    {
        title: "Cafeteria",
        description: "Modern dining facilities offering nutritious meals and a comfortable dining environment.",
        image: "/images/cafeteria.jpg",
        color: "red"
    }
];
---

<Layout title="Facilities - Data Center College of the Philippines">
    <Block01Navigation client:only="react" />
    <main class="flex-1">
        <!-- Hero Section -->
        <section class="relative py-24 md:py-32 overflow-hidden">
            <div class="absolute inset-0 bg-gradient-to-b from-blue-600 to-blue-800">
                <div class="absolute inset-0 bg-[url('/noise.png')] opacity-10"></div>
            </div>
            <div class="relative container mx-auto px-4 md:px-6">
                <div class="max-w-3xl mx-auto text-center" data-aos="fade-up" data-aos-duration="1000">
                    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-6">
                        Our Facilities
                    </h1>
                    <p class="text-xl text-blue-100 mb-8" data-aos="fade-up" data-aos-delay="200">
                        State-of-the-art learning spaces designed for your success
                    </p>
                    <div class="animate-bounce-slow" data-aos="fade-up" data-aos-delay="400">
                        <svg class="w-6 h-6 mx-auto text-white/70" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
                        </svg>
                    </div>
                </div>
            </div>
        </section>

        <!-- Facilities Grid -->
        <section class="py-16 md:py-24 bg-gray-50">
            <div class="container mx-auto px-4 md:px-6">
                <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                    {facilities.map((facility, index) => (
                        <div 
                            class="group relative overflow-hidden rounded-2xl shadow-lg transition-all duration-300 hover:-translate-y-2 hover:shadow-xl"
                            data-aos="fade-up"
                            data-aos-delay={index * 100}
                        >
                            <div class={`aspect-video w-full bg-${facility.color}-100 relative overflow-hidden`}>
                                <img 
                                    src={facility.image} 
                                    alt={facility.title}
                                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                                />
                                <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/40 to-transparent"></div>
                            </div>
                            <div class="absolute bottom-0 w-full p-6">
                                <h3 class="text-2xl font-bold text-white mb-2">{facility.title}</h3>
                                <p class="text-white/90">{facility.description}</p>
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section class="py-16 md:py-24 bg-white" data-aos="fade-up">
            <div class="container mx-auto px-4 md:px-6 text-center">
                <h2 class="text-3xl font-bold text-gray-900 mb-6" data-aos="fade-up">
                    Experience Our Campus
                </h2>
                <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
                    Want to see our facilities in person? Schedule a campus tour today!
                </p>
                <a 
                    href="/contact" 
                    class="inline-flex items-center justify-center px-8 py-3 text-base font-medium text-white bg-blue-600 rounded-lg shadow-lg hover:bg-blue-700 transition-all duration-300 transform hover:scale-105"
                    data-aos="fade-up"
                    data-aos-delay="200"
                >
                    Schedule a Tour
                </a>
            </div>
        </section>
    </main>
    <Footer />
</Layout>

<style>
    @keyframes bounce-slow {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-10px); }
    }

    .animate-bounce-slow {
        animation: bounce-slow 2s ease-in-out infinite;
    }
</style>
