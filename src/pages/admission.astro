---
import Layout from '../layouts/Layout.astro';
import Block01Navigation from '../components/kokonutui/block-01-nav';
---

<Layout title="Admission Requirements | DCCP">
    <Block01Navigation client:only="react" />
    <div class="bg-gradient-to-b from-white to-gray-50">
        <!-- Hero Section -->
        <div class="relative overflow-hidden bg-blue-600 text-white py-24">
            <div class="absolute inset-0 bg-[url('/src/assets/images/pattern.png')] opacity-10"></div>
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
                <div class="text-center">
                    <h1 class="text-5xl font-bold mb-6">Admission Requirements</h1>
                    <p class="text-xl text-blue-100 max-w-2xl mx-auto">Take your first step towards excellence by joining our academic community</p>
                </div>
            </div>
        </div>

        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
            <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
                <!-- Senior High School Box -->
                <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                    <div class="p-8">
                        <div class="flex items-center gap-4 mb-6">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-blue-100">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-blue-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900">Senior High School</h3>
                        </div>
                        <ul class="space-y-4">
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-blue-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Grade 10 Report Card (Form 138)
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-blue-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                2 Photocopies PSA Birth Certificate
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-blue-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                4 pcs. 1x1 ID Picture
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-blue-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Original Copy Transfer Credentials
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- College Freshman Box -->
                <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                    <div class="p-8">
                        <div class="flex items-center gap-4 mb-6">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-green-100">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path d="M12 14l9-5-9-5-9 5 9 5z" />
                                    <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" />
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900">College Freshman</h3>
                        </div>
                        <ul class="space-y-4">
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-green-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Grade 12 Report Card (Form 138)
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-green-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                2 Photocopies PSA Birth Certificate
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-green-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                4 pcs. 1x1 ID Picture
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-green-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Original Copy Transfer Credentials
                            </li>
                        </ul>
                    </div>
                </div>

                <!-- Transferees Box -->
                <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-shadow duration-300 overflow-hidden">
                    <div class="p-8">
                        <div class="flex items-center gap-4 mb-6">
                            <div class="flex items-center justify-center w-12 h-12 rounded-full bg-purple-100">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-purple-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4" />
                                </svg>
                            </div>
                            <h3 class="text-2xl font-bold text-gray-900">Transferees</h3>
                        </div>
                        <ul class="space-y-4">
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-purple-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Transcript of Records
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-purple-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                Certificate of Good Moral Character
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-purple-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                2 Photocopies PSA Birth Certificate
                            </li>
                            <li class="flex items-center text-gray-700">
                                <svg class="h-5 w-5 text-purple-500 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                                </svg>
                                4 pcs. 1x1 ID Picture
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <!-- Contact Section -->
            <section class="mt-20 text-center">
                <div class="max-w-3xl mx-auto">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6">Ready to Begin Your Journey?</h2>
                    <p class="text-lg text-gray-600 mb-8">
                        For more information about admission requirements or the application process, 
                        please contact our Admissions Office or visit our campus during office hours.
                    </p>
                    <div class="inline-flex gap-4">
                        <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700">
                            Contact Us
                        </a>
                    </div>
                </div>
            </section>
        </div>
    </div>
</Layout>