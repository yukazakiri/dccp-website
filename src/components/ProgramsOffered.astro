---
import { Button } from "@/components/ui/button";
import ProgramTabs from './ProgramTabs';
---

<div class="bg-background">
    <!-- Hero Section -->
    <div class="relative overflow-hidden bg-primary text-primary-foreground py-24">
        <div class="absolute inset-0 bg-gradient-to-b from-blue-600 to-blue-800 opacity-90"></div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
            <div class="text-center">
                <h1 class="text-5xl font-bold mb-6" data-aos="fade-down">Academic Programs</h1>
                <p class="text-xl text-primary-foreground/80 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
                    Discover your path to success with our comprehensive educational programs
                </p>
            </div>
        </div>
    </div>

    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
        <div class="w-full">
            <ProgramTabs client:load />
        </div>

        <!-- Contact Section -->
        <section class="mt-20 text-center" data-aos="fade-up" data-aos-offset="200">
            <div class="max-w-3xl mx-auto">
                <h2 class="text-3xl font-bold mb-6" data-aos="fade-up" data-aos-delay="100">
                    Ready to Start Your Journey?
                </h2>
                <p class="text-muted-foreground mb-8" data-aos="fade-up" data-aos-delay="200">
                    Contact our admissions office to learn more about our programs and start your application process.
                </p>
                <div class="flex flex-col sm:flex-row gap-4 justify-center" data-aos="fade-up" data-aos-delay="300">
                    <Button asChild size="lg" client:load>
                        <a href="/contact">Contact Admissions</a>
                    </Button>
                    <Button variant="outline" asChild size="lg" client:load>
                        <a href="/apply">Apply Now</a>
                    </Button>
                </div>
            </div>
        </section>
    </div>
</div>
