---
import { Image } from 'astro:assets';
---

<section class="relative min-h-screen pt-20 pb-16 flex items-center bg-gradient-to-b from-white via-blue-50 to-blue-300">
    <div class="container mx-auto px-4 md:px-6">
        <div class="grid gap-8 lg:grid-cols-2 lg:gap-12">
            {/* Text Content */}
            <div class="flex flex-col justify-center space-y-6 text-center lg:text-left">
                <div class="space-y-4">
                    <h1 
                        data-aos="fade-right"
                        data-aos-delay="100"
                        class="text-4xl font-bold tracking-tighter text-blue-900 sm:text-5xl md:text-6xl"
                    >
                        PIONEERING IN IT EDUCATION
                        <span 
                            data-aos="fade-left"
                            data-aos-delay="300"
                            class="block text-2xl sm:text-3xl md:text-4xl mt-2 text-blue-700"
                        >
                            SINCE 1974
                        </span>
                    </h1>
                    <p 
                        data-aos="fade-up"
                        data-aos-delay="400"
                        class="text-lg sm:text-xl text-blue-800 max-w-[600px] mx-auto lg:mx-0"
                    >
                        Data Center College of the Philippines Baguio City - a haven for knowledge-seekers nestled in the chilly mountains of Baguio City!
                    </p>
                </div>
                <div 
                    data-aos="fade-up"
                    data-aos-delay="500"
                    class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start"
                >
                    <a 
                        href="#courses" 
                        class="inline-flex items-center justify-center rounded-full text-base font-medium bg-blue-900 text-white hover:bg-blue-800 px-6 py-3 transition-colors"
                    >
                        Explore Programs
                    </a>
                    <a 
                        href="#contact" 
                        class="inline-flex items-center justify-center rounded-full text-base font-medium border-2 border-blue-900 text-blue-900 hover:bg-blue-100 px-6 py-3 transition-colors"
                    >
                        Contact Us
                    </a>
                </div>
            </div>

            {/* Image Container */}
            <div 
                data-aos="zoom-in"
                data-aos-delay="300"
                class="relative mx-auto max-w-[500px] lg:max-w-none"
            >
                <div class="relative aspect-[4/3] w-full">
                    <img
                        alt="DCCP Baguio Campus"
                        class="w-full h-full rounded-2xl object-cover object-center shadow-xl"
                        src="/images/dccp-background.jpg"
                    />
                    <div 
                        data-aos="fade-down-right"
                        data-aos-delay="600"
                        class="absolute top-[-50px] left-[-50px] w-[200px] h-[200px] rounded-xl bg-amber-200/30 animate-float"
                    ></div>
                    <div 
                        data-aos="fade-up-left"
                        data-aos-delay="800"
                        class="absolute bottom-[-30px] right-[-30px] w-[150px] h-[150px] rounded-xl bg-blue-300/30 animate-float-delayed"
                    ></div>
                </div>
            </div>
        </div>
    </div>

    {/* Background Decorative Elements */}
    <div class="absolute inset-0 -z-10 overflow-hidden">
        <div 
            data-aos="fade-right"
            data-aos-duration="1500"
            class="absolute top-1/4 left-0 w-72 h-72 bg-blue-200 rounded-full filter blur-3xl opacity-20 animate-pulse-slow"
        ></div>
        <div 
            data-aos="fade-left"
            data-aos-duration="1500"
            class="absolute bottom-1/4 right-0 w-72 h-72 bg-amber-200 rounded-full filter blur-3xl opacity-20 animate-pulse-slow"
        ></div>
    </div>
</section>

<style>
    /* Keep your existing styles for float animations */
    @keyframes float {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-20px);
        }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    .animate-float-delayed {
        animation: float 6s ease-in-out infinite;
        animation-delay: 2s;
    }

    .animate-pulse-slow {
        animation: pulse 8s ease-in-out infinite;
    }

    @keyframes pulse {
        0%, 100% {
            opacity: 0.2;
            transform: scale(1);
        }
        50% {
            opacity: 0.3;
            transform: scale(1.1);
        }
    }
</style>