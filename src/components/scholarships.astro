
---



const scholarships = [
{
    name: "TES",
    image: "images/scholarships/tes.webp",
},
{
    name: "DOH",
    image: "images/scholarships/doh.webp"
},
{
    name: "BARMM",
    image: "images/scholarships/barmm.webp"
}
,{
    name: "CHED",
    image: "images/scholarships/ched.webp"
},
